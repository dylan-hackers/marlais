root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
tab_width = 8

[{*.c,*.h}]
indent_style = space
indent_size = 4

[{*.l,*.y}]
indent_style = space
indent_size = 4

[*.dylan]
indent_style = space
indent_size = 4
